{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {

        "target": "es5",
        "lib": ["es2015"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "build",
        "rootDirs": ["src", "test"],
        "pretty": true,
        "noEmitOnError":true,

        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "allowJs": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true

    }
}
